/* Compact Quality Badge - Ultra Premium Version */
.qualityBadge {
  display: inline-flex;
  align-items: center;
  padding: 0.65rem 1.3rem;
  background: 
    linear-gradient(135deg, 
      rgba(255, 255, 255, 0.45) 0%, 
      rgba(255, 255, 255, 0.3) 50%,
      rgba(255, 255, 255, 0.35) 100%),
    radial-gradient(circle at 20% 50%, rgba(107, 155, 78, 0.08) 0%, transparent 50%),
    radial-gradient(circle at 80% 50%, rgba(107, 155, 78, 0.06) 0%, transparent 50%);
  backdrop-filter: blur(14px) saturate(190%) brightness(1.12);
  -webkit-backdrop-filter: blur(14px) saturate(190%) brightness(1.12);
  border: 2px solid transparent;
  background-clip: padding-box;
  border-radius: 28px;
  margin-bottom: 0.5rem;
  box-shadow: 
    0 4px 16px rgba(107, 155, 78, 0.18),
    0 2px 8px rgba(0, 0, 0, 0.06),
    0 0 30px rgba(107, 155, 78, 0.12),
    0 1px 3px rgba(255, 255, 255, 0.5) inset,
    0 -1px 2px rgba(107, 155, 78, 0.12) inset,
    0 0 0 1px rgba(107, 155, 78, 0.15);
  animation: subtleFloat 4s ease-in-out infinite, subtleGlow 3s ease-in-out infinite;
  transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
  position: relative;
  overflow: hidden;
}
